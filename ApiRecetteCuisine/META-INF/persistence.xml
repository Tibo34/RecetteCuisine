<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">
    <persistence-unit name="com.ConfigPoste.RecetteCuisine.RecetteCuisine.persistence">
        <class>com.ConfigPoste.RecetteCuisine.RecetteCuisine.Model.IngredientEntity</class>
        <class>com.ConfigPoste.RecetteCuisine.RecetteCuisine.Model.RecetteEntity</class>
        <class>com.ConfigPoste.RecetteCuisine.RecetteCuisine.Model.TypeIngredientEntity</class>
        <class>com.ConfigPoste.RecetteCuisine.RecetteCuisine.Model.UniteEntity</class>
        <properties>
            <property name="hibernate.archive.autodetection" value="class"/>
            <property name="hibernate.show_sql" value="false"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.use_sql_comments" value="true"/>

            <!-- Configuration BDD -->
            <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:9906/recetteCuisine?serverTimezone=UTC"/>
            <property name="javax.persistence.jdbc.user" value="molinat"/>
            <property name="javax.persistence.jdbc.password" value="1234"/>

            <!-- Dialect SQL -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5Dialect"/>
            <property name="hibernate.hbm2ddl.auto" value="validate"/>
            <property name="cache.provider_class" value="org.hibernate.cache.NoCacheProvider"/>
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:9906/recetteCuisine"/>
            <property name="hibernate.connection.driver_class" value="com.mysql.cj.jdbc.Driver"/>

        </properties>
    </persistence-unit>
</persistence>
